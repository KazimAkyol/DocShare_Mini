{
    "compilerOptions": {
        "target": "ES2020", // Modern Node uyumlu JS çıktısı
        "module": "commonjs", // Node.js için CommonJS
        "rootDir": "./src", // TS kaynak klasörü
        "outDir": "./dist", // Derlenmiş dosyalar
        "esModuleInterop": true, // import * as express vs sorun çıkmasın
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ], // sadece src klasörü derlensin
    "exclude": [
        "node_modules",
        "dist"
    ] // node_modules ve dist’i hariç tut
}